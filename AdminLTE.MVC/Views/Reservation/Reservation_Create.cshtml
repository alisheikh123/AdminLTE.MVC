
@model AdminLTE.MVC.Models.Class.ReservationForm
@{
    ViewData["Title"] = "Reservation_Create";
}

<head>
    <link href="~/css/site.css" rel="stylesheet" />
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.18/angular.min.js"></script>


</head>
<body ng-app="resApp" ng-controller="ReservationCtrl">
    <h1 style="text-align:center;">Reservation_Create</h1>
    <form asp-controller="Reservation" asp-action="Reservation_Create"  name="myForm" method="post" role="form" class="form-horizontal">
        <div>
            <h4 style="text-align:center;">Car Detail</h4>
            
            <div class="row">
                <div class="col-4">
                    <label asp-for="Category" class="control-label"></label>
                    <select asp-for="catId" class="form-control" asp-items="@ViewBag.category">
                    </select>
                </div>
                <div class="col-4">
                    <label asp-for="Brand" class="control-label" ></label>
                    <input asp-for="Brand" class="form-control" ng-model="brand" required/>
                </div>
                <div class="col-4">
                    <label asp-for="Car" class="control-label"></label>
                    <select asp-for="Car" class="form-control" asp-items="@ViewBag.car">
                    </select>
                </div>
            </div>

            <div class="row">

                <div class="col-4">
                    <label asp-for="Color" class="control-label"></label>
                    <input asp-for="Color" class="form-control" required/>
                </div>
                <div class="col-4">
                    <label asp-for="Model" class="control-label"></label>
                    <input asp-for="Model" class="form-control" required/>
                </div>
            </div>
            <button class="btn btn-primary">Submit</button>
        </div>
        <br />
        <hr />
        <div>
            <h4 style="text-align:center;">Customer Detail</h4>
            <div class="row">
                <span ng-show="myForm.myAddress.$error.email" style="color:red;">* Not a valid e-mail address (i-e a@gmail.com)</span>
            </div>
            <div class="row">
                <div class="col-4">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" required/>
                </div>
                <div class="col-4">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" required/>
                </div>
                <div class="col-4">
                    <label asp-for="EmailAddress" class="control-label"></label>
                    <input asp-for="EmailAddress" class="form-control" type="email" name="myAddress" ng-model="text" required>

                </div>
            </div>

            <div class="row">

                <div class="col-4">
                    <label asp-for="CNIC" class="control-label"></label>
                    <input asp-for="CNIC" class="form-control"  required/>

                </div>
                <div class="col-4">
                    <label asp-for="MobileNo" class="control-label"></label>
                    <input asp-for="MobileNo" class="form-control" required/>
                </div>
                <div class="col-4">
                    <label asp-for="State" class="control-label"></label>
                    <input asp-for="State" class="form-control" required/>
                </div>
            </div>
            <div class="row">

                <div class="col-4">
                    <label asp-for="Country" class="control-label" ng-model="CountryId" ng-change="state()" ></label>
                    <select asp-for="Country" class="form-control" >
                        <option value="" >--Select Country--</option>
                        <option data-ng-repeat="t in countrylist" value="{{t.country_Id}}">{{t.country_Name}}</option>
                    </select>
                </div>

            </div>
        </div>

        <br />
        <hr />
        <div>
            <h4 style="text-align:center;">Location Details</h4>
            <div class="row">
                <div class="col-4">
                    <label asp-for="fromLocation" class="control-label"></label>
                    <input asp-for="fromLocation" class="form-control" required/>
                </div>
                <div class="col-4">
                    <label asp-for="fromDate" class="control-label"></label>
                    <input asp-for="fromDate" class="form-control" value="@(ViewBag.fDate)" />
                </div>
                <div class="col-4">
                    <label asp-for="toLocation" class="control-label"></label>
                    <input asp-for="toLocation" class="form-control" required/>
                </div>

            </div>
            <div class="row">
                <div class="col-4">
                    <label asp-for="toDate" class="control-label"></label>
                    <input asp-for="toDate" class="form-control" required/>
                </div>


                <div class="col-4">
                    <label asp-for="Countryloc" class="control-label"></label>
                    <input asp-for="Countryloc" class="form-control" required/>


                </div>
                <div class="col-4">
                    <label asp-for="Stateloc" class="control-label"></label>
                    <input asp-for="Stateloc" class="form-control" required/>
                </div>

            </div>


            <div class="row">
                <div class="col-4">
                    <label asp-for="City" class="control-label"></label>
                    <input asp-for="City" class="form-control" required/>
                </div>
                <div class="col-4">
                    <label asp-for="StreetNo" class="control-label"></label>
                    <input asp-for="StreetNo" class="form-control" required/>
                </div>
                <div class="col-4">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" required/>
                </div>



            </div>

    </form>

    <script src="~/js/Reservationcontroller.js"></script>
</body>
